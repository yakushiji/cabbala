= form_for @karma_number do |f|
  - if @karma_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@karma_number.errors.count, "error")} prohibited this karma_number from being saved:"
      %ul
        - @karma_number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
